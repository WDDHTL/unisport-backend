<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.unisport.mapper.CommentMapper">

    <delete id="deleteByPostIds">
        DELETE FROM comments
        WHERE post_id IN
        <foreach collection="postIds" item="pid" open="(" separator="," close=")">
            #{pid}
        </foreach>
        AND deleted = 1
    </delete>
    <delete id="deleteByCommentIds">
        DELETE FROM comments
        WHERE id IN
        <foreach collection="commentIds" item="cid" open="(" separator="," close=")">
            #{cid}
        </foreach>
        AND deleted = 1
    </delete>


</mapper>
